@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4 text-white mb-5">
        <div class="col-6">
            <h2 class="text-success">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-secondary">
              <i class="fa fa-plus" aria-hidden="true"></i> &nbsp;  Create New Category
            </a>
        </div>
    </div>


<h1>Index Category</h1>

<table class="table table-bordered table-striped" style="width:100%" >
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                @obj.Name
                </td>
                <td width ="30%">
                @obj.DisplayOrder
                </td>
                <td>
                     <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-secondary mx-2"> 
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i> <span class="d-sm-none d-md-block">Edit</span> </a>
                    </div>
                </td>
                <td>
                     <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> 
                        <i class="fa fa-trash" aria-hidden="true"></i> <span class="d-sm-none d-md-block">Delete</span> </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
 </table>
 </div>